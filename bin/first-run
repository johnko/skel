#!/bin/sh

gdf

if [ "x" != "x${SQUID}" ]; then
    env SQUID=${SQUID} setproxy
fi

fres

if [ ! -e ~/local/cshvars ] && [ -e ~/perm/cshvars ]; then
    install -m 600 ~/perm/cshvars ~/local/cshvars
    vi ~/local/cshvars
fi

if [ ! -e ~/.ssh/id_ed25519 ]; then
    ssh-makeprivkey-ed25519
fi

if [ "x-q" != "x${1}" ]; then
    rm -r ~/bin/
    sh ~/git/skel/bin/fres
    cat <<EOF
Run these commands:
    fzg-random-key
    fzg -i -z 925 -p tank -d ada0 -d ada1 -d ada2
    fzg-unlock-on-boot
    exit
EOF
    csh
    ioc-setup
fi
