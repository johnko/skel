#!/bin/sh

gdf

if [ "x" != "x${SQUID}" ]; then
    env SQUID=${SQUID} setproxy
fi

fres

if [ ! -e /root/.ssh/id_ed25519 ]; then
    ssh-makeprivkey-ed25519
fi

if [ "x-q" != "x${1}" ]; then
    rm -r ~/bin/
    sh ~/git/skel/bin/fres
    cat <<EOF
Run these commands:
    fzg-random-key
    fzg -i
    fzg-unlock-on-boot
    exit
EOF
    csh
    ioc-setup
fi
